<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SemesterHomeFragment">

    <fragment
        android:id="@+id/SemesterHomeFragment"
        android:name="com.ab.semesterapplication.SemesterHomeFragment"
        android:label="@string/semester_home_label"
        tools:layout="@layout/fragment_semester_home">

        <action
            android:id="@+id/action_SemesterHomeFragment_to_SemesterQnFragment"
            app:destination="@id/SemesterQuestionFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:popUpTo="@id/SemesterQuestionFragment"
            app:popUpToInclusive="true" />

        <argument
            android:name="examName"
            app:argType="string"
            android:defaultValue="Exam"/>

    </fragment>
    <fragment
        android:id="@+id/SemesterQuestionFragment"
        android:name="com.ab.semesterapplication.SemesterQuestionFragment"
        android:label="@string/semester_question_fragment"
        tools:layout="@layout/fragment_semester_question">

        <action
            android:id="@+id/action_SemesterQnFragment_to_SemesterHomeFragment"
            app:destination="@id/SemesterHomeFragment"
            app:exitAnim="@anim/slide_out_bottom"
            app:popUpTo="@id/SemesterQuestionFragment"
            app:popUpToInclusive="true" />

    </fragment>
</navigation>